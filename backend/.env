DB_HOST=localhost
DB_USER=root
DB_PASSWORD=  # Leave empty if there is no password
DB_NAME=hotel_management
PORT=5000

# JWT secrets for token-based authentication
JWT_SECRET=your_jwt_secret_key         # Secret for signing access tokens
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key  # Secret for signing refresh tokens

# Token expiration times
JWT_EXPIRATION=1h                     # Access token expiration (1 hour)
JWT_REFRESH_EXPIRATION=7d             # Refresh token expiration (7 days)
